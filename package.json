{
  "name": "nightshift",
  "version": "1.0.0",
  "description": "AI Task Orchestrator for Claude Code - Queue, orchestrate, and review AI-assisted coding tasks",
  "main": "./out/main/index.js",
  "author": "Nick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owlkaboom/nightshift.git"
  },
  "bugs": {
    "url": "https://github.com/owlkaboom/nightshift/issues"
  },
  "homepage": "https://github.com/owlkaboom/nightshift#readme",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:win:x64": "npm run build && electron-builder --win --x64",
    "build:win:arm64": "npm run build && electron-builder --win --arm64",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac:x64": "npm run build && electron-builder --mac --x64",
    "build:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "build:mac:universal": "npm run build && electron-builder --mac --universal",
    "build:linux": "npm run build && electron-builder --linux",
    "build:linux:x64": "npm run build && electron-builder --linux --x64",
    "build:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "verify-db": "tsx scripts/verify-db-schema.ts",
    "test": "jest",
    "release": "tsx scripts/release.ts",
    "release:patch": "tsx scripts/release.ts patch",
    "release:minor": "tsx scripts/release.ts minor",
    "release:major": "tsx scripts/release.ts major",
    "release:beta": "tsx scripts/release.ts beta"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-virtual": "^3.13.13",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^5.0.0",
    "diff": "^8.0.2",
    "gray-matter": "^4.0.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.30.0"
  },
  "optionalDependencies": {
    "@huggingface/transformers": "^3.8.1",
    "wavefile": "^11.0.0"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-router": "^1.140.5",
    "@tanstack/router-devtools": "^1.140.5",
    "@tanstack/router-plugin": "^1.141.5",
    "@tiptap/extension-highlight": "^3.13.0",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/extension-mention": "^3.13.0",
    "@tiptap/extension-placeholder": "^3.13.0",
    "@tiptap/extension-task-item": "^3.13.0",
    "@tiptap/extension-task-list": "^3.13.0",
    "@tiptap/extension-typography": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff": "^7.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "lucide-react": "^0.559.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "zustand": "^5.0.9"
  },
  "build": {
    "appId": "com.nightshift.app",
    "productName": "Nightshift",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "!out/**/*.map"
    ],
    "extraResources": [
      {
        "from": "CHANGELOG.md",
        "to": "CHANGELOG.md"
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/onnxruntime-node/**/*",
      "node_modules/sharp/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
